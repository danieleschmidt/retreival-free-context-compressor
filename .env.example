# Development Environment Variables
# Copy this file to .env and customize as needed

# Python Configuration
PYTHONPATH=src
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Model Configuration
HUGGINGFACE_HUB_CACHE=./cache/huggingface
TRANSFORMERS_CACHE=./cache/transformers
MODEL_CACHE_DIR=./cache/models

# Training Configuration
WANDB_PROJECT=retrieval-free-compression
WANDB_ENTITY=your-username
# WANDB_API_KEY=your-wandb-api-key

# Evaluation Configuration
EVAL_OUTPUT_DIR=./results
BENCHMARK_DATA_DIR=./data/benchmarks

# Security and API Keys (uncomment and set as needed)
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key
# COHERE_API_KEY=your-cohere-key

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
PYTEST_CURRENT_TEST=true

# Database Configuration (if using for caching/metrics)
# DATABASE_URL=sqlite:///./cache/metrics.db
# REDIS_URL=redis://localhost:6379/0

# Monitoring and Observability
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
# JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Performance Tuning
# OMP_NUM_THREADS=4
# MKL_NUM_THREADS=4
# TOKENIZERS_PARALLELISM=false

# Cloud Storage (if using for model/data storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
# GCS_BUCKET_NAME=your-gcs-bucket
# AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string

# Experiment Tracking
# MLFLOW_TRACKING_URI=http://localhost:5000
# TENSORBOARD_LOG_DIR=./logs/tensorboard

# Testing Configuration
TEST_DATA_DIR=./tests/fixtures
TEST_OUTPUT_DIR=./tests/output
PYTEST_TIMEOUT=300

# Security Settings
# Uncomment to enable additional security measures
# SECURE_MODE=true
# DISABLE_MODEL_DOWNLOAD=false
# SANDBOX_MODE=true